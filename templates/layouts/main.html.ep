<!DOCTYPE html>
<html>
  <head>
    <title>Solidarität statt Rassismus | Netzwerk Kritische Migrations- und Grenzregimeforschung</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="/css/style.css" rel="stylesheet" rel="stylesheet" media="screen">
    <script src="/assets/jquery/jquery.min.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
  </head>
  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Solidarität statt Rassismus</a>

        <div class="nav-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href=""></a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

	<div class="container">
		
		<% my $error = flash 'error'; if ( $error ) { %>
			<div class="alert alert-danger"><%= $error %></div>
		<% } %>

		<% my $success = flash 'success'; if ( $success ) { %>
			<div class="alert alert-success"><%= $success %></div>
		<% } %>

		<div class="row">
			<h1><%= title %></h1>
		</div>

		<div class="row">
			<%= content %>
		</div>

	</div><!-- .container -->

  </body>
</html>
